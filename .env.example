# =============================================================================
# Simple File Service - Environment Variables
# =============================================================================
# 이 파일을 .env로 복사하여 사용하세요.
# cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# 서버 설정
# -----------------------------------------------------------------------------
SERVER_PORT=8080

# -----------------------------------------------------------------------------
# 데이터베이스 설정
# -----------------------------------------------------------------------------
# H2 (기본값 - 개발/테스트용)
SPRING_DATASOURCE_URL=jdbc:h2:mem:streamix;DB_CLOSE_DELAY=-1
SPRING_DATASOURCE_DRIVER=org.h2.Driver
SPRING_DATASOURCE_USERNAME=sa
SPRING_DATASOURCE_PASSWORD=

# PostgreSQL (프로덕션 권장)
# SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/filedb
# SPRING_DATASOURCE_DRIVER=org.postgresql.Driver
# SPRING_DATASOURCE_USERNAME=postgres
# SPRING_DATASOURCE_PASSWORD=secret

# MySQL
# SPRING_DATASOURCE_URL=jdbc:mysql://localhost:3306/filedb
# SPRING_DATASOURCE_DRIVER=com.mysql.cj.jdbc.Driver
# SPRING_DATASOURCE_USERNAME=root
# SPRING_DATASOURCE_PASSWORD=secret

# JPA DDL 전략
# create-drop: 앱 시작시 생성, 종료시 삭제 (개발용)
# update: 스키마 변경시 자동 업데이트 (개발용)
# validate: 스키마 검증만 (프로덕션용)
# none: 아무것도 안함 (프로덕션용)
SPRING_JPA_DDL_AUTO=create-drop
SPRING_JPA_SHOW_SQL=false

# H2 Console (개발용)
H2_CONSOLE_ENABLED=true

# -----------------------------------------------------------------------------
# 파일 업로드 설정
# -----------------------------------------------------------------------------
MAX_FILE_SIZE=100MB
MAX_REQUEST_SIZE=100MB

# -----------------------------------------------------------------------------
# Streamix 저장소 설정
# -----------------------------------------------------------------------------
STREAMIX_STORAGE_BASE_PATH=./streamix-data

# 최대 파일 크기 (바이트, v2.0.0 신규)
# 기본값: 104857600 (100MB)
STREAMIX_STORAGE_MAX_FILE_SIZE=104857600

# 허용 파일 타입 (v2.0.0 신규)
# 빈 값 = 전체 허용
# 가능한 값: IMAGE, VIDEO, AUDIO, DOCUMENT, ARCHIVE, OTHER
# 예시: IMAGE,VIDEO (이미지와 비디오만 허용)
STREAMIX_STORAGE_ALLOWED_TYPES=

# -----------------------------------------------------------------------------
# Streamix 썸네일 설정
# -----------------------------------------------------------------------------
STREAMIX_THUMBNAIL_ENABLED=true
STREAMIX_THUMBNAIL_WIDTH=320
STREAMIX_THUMBNAIL_HEIGHT=180
STREAMIX_THUMBNAIL_FFMPEG_PATH=ffmpeg

# -----------------------------------------------------------------------------
# Streamix API 설정
# -----------------------------------------------------------------------------
STREAMIX_API_ENABLED=true
STREAMIX_API_BASE_PATH=/api/streamix

# -----------------------------------------------------------------------------
# Streamix 대시보드 설정
# -----------------------------------------------------------------------------
STREAMIX_DASHBOARD_ENABLED=true
STREAMIX_DASHBOARD_PATH=/streamix

# -----------------------------------------------------------------------------
# Actuator 설정
# -----------------------------------------------------------------------------
# never: 상세 정보 숨김 (프로덕션용)
# always: 항상 표시 (개발용)
# when_authorized: 인증시만 표시
ACTUATOR_HEALTH_DETAILS=never